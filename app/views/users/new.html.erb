<h1>Sign up!</h1>
<%= form_for @user do |u| %>
  <%= render 'shared/error_messages' %>
  <%= u.label :name %>
  <%= u.text_field :name %>
  <%= u.label :password %>
  <%= u.password_field :password %>
  <%= u.label :password_confirmation %>
  <%= u.password_field :password_confirmation %>
  <%= u.submit 'sign up!' %>
<% end %>