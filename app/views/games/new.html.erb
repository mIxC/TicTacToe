<% content_for :head do %>
  <%= render :partial => 'shared/new_game.js' %>
<% end %>
<h1>Create New Game</h1>
<div class='row'>
  <div class='span3' id='centerCreate'>
    <%= render 'shared/error_messages_game' %>
    <%= form_tag(:controller => 'games', :action => 'create') do %>
      <div class='input-prepend'><span class='add-on'>Game Name</span><%= text_field_tag :name, nil, :class => 'span2' %></div>
      <label class='radio'><%= radio_button_tag(:opponent, "undetermined") %> Open Game Anyone Can Join</label>
      <label class='radio'><%= radio_button_tag(:opponent, "user") %> Select Opponent</label>
      <div id='player_selection' class='newGameBlock'>
        <%= collection_select :user2, :id, User.where('id != ?',current_user.id), :id, :name, {:prompt => 'Select Player'} %>
      </div>
      <label class='radio'><%= radio_button_tag(:opponent, "computer") %> Play Computer</label>
      <div id='turn_options' class='newGameBlock'>
        <label class='radio'><%= radio_button_tag(:turn, "first") %> Go First</label>
        <label class='radio'><%= radio_button_tag(:turn, "second") %> Go Second</label>
      </div>
      <br/>
      <%= submit_tag 'make the game', :class => 'btn' %>
    <% end %>
  </div>
</div>
