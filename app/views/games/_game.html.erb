
  <tr>
    <td><%= link_to game.name, game %></td>
    <td><%= User.find(game.user1_id).name %></td>
    <td>
      <% if game.user2_id %>
        <%= User.find(game.user2_id).name %>
      <% else %>
        no one!
      <% end %>
    </td>
    <td>
    <% if game.user2_id.nil? && signed_in? && game.user1_id != current_user.id %>
        <%= link_to ' join game', {:controller => 'games', :action => 'join', :user2_id => current_user.id, :game_id => game.id}, :method => 'post' %>
    <% end %>
    </td>
  </tr>